<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardview"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/cardview_margin"
    android:clickable="true"
    android:foreground="?selectableItemBackground"
    android:padding="@dimen/cardview_radius"
    app:cardCornerRadius="@dimen/cardview_default_radius"
    app:cardElevation="@dimen/cardview_elevation"
    android:descendantFocusability="blocksDescendants"
    app:cardPreventCornerOverlap="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_img"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentLeft="true" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/tv_source"
            android:layout_alignTop="@+id/iv_img"
            android:layout_toRightOf="@+id/iv_img"
            android:paddingBottom="@dimen/cardview_elevation"
            android:paddingRight="0dp"
            android:paddingLeft="@dimen/cardview_elevation"
            android:paddingTop="@dimen/cardview_elevation"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_16" />

        <TextView
            android:id="@+id/tv_source"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/iv_img"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="@dimen/cardview_elevation"
            android:layout_marginRight="@dimen/cardview_elevation"
            android:textColor="@color/divider"
            android:textSize="@dimen/sp_12" />

    </RelativeLayout>

</android.support.v7.widget.CardView>